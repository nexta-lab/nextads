<odoo>
  <record id="view_verifactu_help_wizard" model="ir.ui.view">
    <field name="name">verifactu.help.wizard.form</field>
    <field name="model">verifactu.help.wizard</field>
    <field name="arch" type="xml">
      <form string="Ayuda del módulo VeriFactu">
        <sheet>
          <div class="o_form_sheet_full">
            <field name="help_text" nolabel="1" readonly="1" widget="html" style="height: 1000px;"/>

          </div>
          <footer>
            <button string="Cerrar" class="btn-primary" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="verifactu_help_wizard_action" model="ir.actions.act_window">
  <field name="name">Ayuda del módulo VeriFactu</field>
  <field name="res_model">verifactu.help.wizard</field>
  <field name="view_mode">form</field>
  <field name="view_id" ref="view_verifactu_help_wizard"/>
  <field name="target">new</field>
</record>

</odoo>
