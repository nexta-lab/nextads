<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_verifactu_requirement_wizard" model="ir.ui.view">
    <field name="name">verifactu.requirement.wizard.form</field>
    <field name="model">verifactu.requirement.wizard</field>
    <field name="arch" type="xml">
      <form string="Referencia de Requerimiento">
        <group>
          <field name="ref_requerimiento"/>
        </group>
        <footer>
          <button name="confirm" type="object" string="Confirmar" class="btn-primary"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
