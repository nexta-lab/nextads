<!-- data/verifactu_update_checker_cron.xml -->
<odoo>
  <record id="ir_cron_verifactu_update_checker" model="ir.cron">
    <field name="name">VeriFactu - Comprobar actualizaciones</field>
    <field name="model_id" ref="base.model_res_config_settings"/>
    <field name="state">code</field>
    <field name="code">model.check_for_updates()</field>
    <field name="interval_number">5</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
    <field name="doall" eval="False"/>
    <field name="active" eval="False"/> <!-- lo controla el toggle de settings -->
  </record>
</odoo>
